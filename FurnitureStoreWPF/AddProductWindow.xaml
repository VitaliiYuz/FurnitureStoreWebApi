<Window x:Class="FurnitureStoreWPF.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати продукт" Height="500" Width="400">
    <StackPanel Margin="20">
        <Label Content="Назва:" VerticalAlignment="Center"/>
        <TextBox x:Name="productNameTextBox" VerticalAlignment="Center" Margin="0,5"/>

        <Label Content="Опис:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="productDescriptionTextBox" VerticalAlignment="Center" Margin="0,5"/>

        <Label Content="Категорія Id:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="categoryIdTextBox" VerticalAlignment="Center" Margin="0,5"/>

        <Label Content="Ціна:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="productPriceTextBox" VerticalAlignment="Center" Margin="0,5"/>

        <Label Content="Кількість на складі:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="productStockQuantityTextBox" VerticalAlignment="Center" Margin="0,5"/>

        <Label Content="Supplier Id:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="supplierIdTextBox" VerticalAlignment="Center" Margin="0,5"/>

        <Button Content="Підтвердити" Height="30" VerticalAlignment="Bottom" Click="ConfirmButton_Click" Margin="0,10"/>
    </StackPanel>
</Window>
