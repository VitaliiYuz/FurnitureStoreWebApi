<Window x:Class="FurnitureStoreWPF.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування товару" Height="400" Width="400">
    <StackPanel Margin="20">
        <Label Content="Назва:"/>
        <TextBox x:Name="productNameTextBox" VerticalAlignment="Center" Margin="0,5,0,0"/>

        <Label Content="Опис:" VerticalAlignment="Center" Margin="0,5,0,0"/>
        <TextBox x:Name="productDescriptionTextBox" VerticalAlignment="Center" Margin="0,5,0,0"/>

        <Label Content="Категорія:" VerticalAlignment="Center" Margin="0,5,0,0"/>
        <TextBox x:Name="categoryIdTextBox" VerticalAlignment="Center" Margin="0,5,0,0"/>

        <Label Content="Ціна:" VerticalAlignment="Center" Margin="0,5,0,0"/>
        <TextBox x:Name="productPriceTextBox" VerticalAlignment="Center" Margin="0,5,0,0"/>

        <Label Content="Кількість:" VerticalAlignment="Center" Margin="0,5,0,0"/>
        <TextBox x:Name="productStockQuantityTextBox" VerticalAlignment="Center" Margin="0,5,0,0"/>

        <Button Content="Підтвердити зміни" Height="30" VerticalAlignment="Bottom" Click="ConfirmButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
